<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.jboss.tools.hibernate.search.actions.IndexRebuildAction"
            id="org.jboss.tools.hibernate.search.actions.indexrebuild"
            name="IndexRebuildAction">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.hibernate.eclipse.console.views.KnownConfigurationsView">
         <command
               commandId="org.jboss.tools.hibernate.search.actions.indexrebuild"
               label="Index Rebuild"
               style="push">
               <visibleWhen>
	                  <with
	                        variable="selection">
	                        <or>
			                     <and>
				                     <adapt type="org.eclipse.jface.viewers.ITreeSelection">
								         <test property="org.jboss.tools.hibernate.search.isSameConfig" value="true"/>
								     </adapt>
								     <iterate
			                              ifEmpty="false">
			                           <instanceof
			                                 value="org.jboss.tools.hibernate.runtime.spi.IPersistentClass">
			                           </instanceof>
			                        </iterate>
								 </and>
		                        <iterate 
		                        	  ifEmpty="false">
		                           <instanceof
		                                 value="org.hibernate.console.ConsoleConfiguration">
		                           </instanceof>
		                        </iterate>
	                     	</or>
	                  </with>
               </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.elementFactories">
      <factory
            class="org.jboss.tools.hibernate.search.analyzers.AnalyzersEditorInputFactory"
            id="org.jboss.tools.hibernate.search.analyzers.AnalyzersTestEditorInputFactory">
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.views">iew>
      <view
            category="hibernatecategory"
            class="org.jboss.tools.hibernate.search.IndexToolkitView"
            id="org.jboss.tools.hibernate.search.IndexToolkitView"
            name="Index Toolkit"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.jboss.tools.hibernate.search.OneParentConfigPropertyTester"
            id="org.jboss.tools.hibernate.search.OneParentConfigPropertyTester"
            namespace="org.jboss.tools.hibernate.search"
            properties="isSameConfig"
            type="org.eclipse.jface.viewers.ITreeSelection">
      </propertyTester>
   </extension>
</fragment>
